= form_for @location do |f|
  - if @location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@location.errors.count, "error")} prohibited this location from being saved:"
      %ul
        - @location.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :short_desc
    = f.text_area :short_desc
  .field
    = f.label :long_desc
    = f.text_area :long_desc
  .field
    = f.label :city
    = f.text_field :city
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :geography
    = f.text_field :geography
  .field
    = f.label :population
    = f.text_field :population
  .field
    = f.label :image_1
    = f.text_field :image_1
  .field
    = f.label :image_2
    = f.text_field :image_2
  .actions
    = f.submit 'Save'
