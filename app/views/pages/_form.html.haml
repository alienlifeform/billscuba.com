= form_for @page do |f| 
  .actions
    = f.submit 'Save'
  %hr 

  - if @page.errors.any?
    #error_explanation
      %h2= "#{pluralize(@page.errors.count, "error")} prohibited this page from being saved:"
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg


  #edit_cols
    #col_1_of_3
      .field
        = f.label :title
        = f.text_field :title
      .field
        = f.label :template
        = f.text_field :template
      .field
        = f.label :top_nav_links
        = f.text_area :top_nav_links
    #col_2_of_3
      .field
        = f.label :main_area_1
        = f.text_area :main_area_1
      .field
        = f.label :main_area_2
        = f.text_area :main_area_2
      .field
        = f.label :main_area_3
        = f.text_area :main_area_3
    #col_3_of_3
      .field
        = f.label :side_area_1
        = f.text_area :side_area_1
      .field
        = f.label :side_area_2
        = f.text_area :side_area_2
      .field
        = f.label :side_area_3
        = f.text_area :side_area_3
