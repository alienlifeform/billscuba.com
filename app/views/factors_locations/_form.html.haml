= form_for @factors_location do |f|
  .actions
    = f.submit 'Save'
  %hr

  - if @factors_location.errors.any?
    #error_explanation
      %h2= "#{pluralize(@factors_location.errors.count, "error")} prohibited this factors_location from being saved:"
      %ul
        - @factors_location.errors.full_messages.each do |msg|
          %li= msg

  #edit_cols
    #col_1_of_3
      .field
        = f.label :factor_id
        / = f.text_field :factor_id
        = f.select :factor_id, options_for_select(factors_for_select()),{}
      .field
        = f.label :location_id
        / = f.text_field :location_id
        = f.select :location_id, options_for_select(locations_for_select()),{}

      .field
        = f.label :value
        = f.text_field :value
      .field
        = f.label :description
        = f.text_area :description